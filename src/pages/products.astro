---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>


<!-- Features2 Widget ************** -->

  <Features2
    title="Versatile Packaging Solutions to Meet Every Requirement"
    subtitle="At Meenakshi Industries, we offer a comprehensive range of corrugated boxes, designed to meet the diverse needs of our clients. Whether you're shipping delicate electronics, heavy industrial components, or consumer goods, we have the perfect packaging solution for you. We utilize high-grade materials and cutting-edge technology to produce boxes that offer maximum protection and durability."
    tagline="Products"
    items={[
      {
        title: 'Custom Corrugated Boxes',
        description: "Tailored to your specific size, thickness, and printing requirements. Ideal for various industries, from e-commerce to food and beverages.",
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Polypropylene (PP) boxes',
        description:
          "Discover the perfect packaging solution with our PP boxes. Engineered for durability and versatility, these boxes ensure secure storage and transport while maintaining a sleek and professional appearance.",
        icon: 'flat-color-icons:gallery',
      },
      {
        title: 'Sustainable Packaging',
        description:
          'We are committed to environmental responsibility. Offering eco-friendly, recyclable, and biodegradable packaging options.',
        icon: 'flat-color-icons:approval',
      },
      {
        title: 'Specialty Boxes',
        description:
          "Packaging solutions for unique needs: heavy-duty, die-cut, or display boxes.",
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Customized Wooden Box',
        description:
          "We are specialize in making four-way, two-way, wooden pallets as per customized.",
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Beyond Boxes',
        description:
          "From boxes to Wax Ribbon, Box tape and Customized Printed Tape,we provide comprehensive solutions to meet your unique needs.",
        icon: 'flat-color-icons:document',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

</Layout>
